<div class="card">
  <h2 class="card-title py-2">{{name}}</h2>
  <div class="card-box row">
    <div class="card-body col-6 px-4">
      <p class="card-text"><b>Capital:</b> {{capital}}</p>
      <p class="card-text"><b>Population:</b> {{population}}</p>
      <p class="card-text"><b>Languages</b></p>
      <ul class="list-group list-group-flush">
        {{#each languages}}
        <li class="list-group-item">{{name}}</li>
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <div class="card-img border border-1">
        {{#each flags}}
        {{# if @first}} <img src="{{this}}" alt="flag {{name}}">
        {{/if}}
        {{/each}}
      </div>
     
    </div>
  </div>
</div>